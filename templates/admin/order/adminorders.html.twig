{% extends 'base.html.twig' %}

{% block title %}Gestion des produits{% endblock %}
{% block body %}
<div class="container mt-5">
    <a href="{{ path('admin_order_new') }}" class="btn btn-primary">Ajouter</a>
    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <th>#</th>
                <th>Statut</th>
                  <th>Prix Total</th>
              
                  <th>Client</th>
              
               
                <th>Action</th>
                
           
               
            </tr>
        </thead>
        <tbody>
            {% for order in orders %}
                <tr>
                    <td>{{ order.id }}</td>
                  <td>{{ order.statut }}</td>
                  <td>{{ order.total }}€</td>
                  <td>{{ order.user.fullname }}€</td>
 
                     
                    <td>
                        <a href="{{ path('admin_order_update', {id: order.id}) }}"  class="text-warning">Modifier</a>
                        <a href="{{ path('admin_order_delete', {id: order.id}) }}"  class="text-danger">Supprimer</a>
                    </td>
                    
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}




 