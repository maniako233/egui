{% extends "base.html.twig" %}
{% block title %}
    {% if editMode %}
        Modifier produit
    {% else %}
        Ajouter produit
    {% endif %}
{% endblock %}

{% block body %}
    <h1 class="text-center my-4">
    {% if editMode %}
    Modifier un produit
    {% else %}
    Ajouter un produit
    {% endif %}
    </h1>
    <div class="container">
    {{form_start(form ,{
        attr: {
            novalidate:'novalidate'
        }
    })}}

        {{ form_row(form.statut) }}
        {{form_row(form.total) }}

        
    
    
    <button class="btn btn-primary custom-bg-green">Ajouter</button>

    {{ form_end(form) }}

    



{% endblock %}