{% extends 'base.html.twig' %}

{% block title %}Gestion des produits{% endblock %}
{% block body %}
<div class="container mt-5  ">

    <a href="{{ path('admin_type_new') }}" class="btn btn-primary">Ajouter</a>
    <table class="table table-dark table-striped ">

    
        <thead >
            <tr>
                <th>#</th>
                <th>Name</th>

                    <th>Image</th>
                
                <th>Description</th>
                <th>Action</th>
            
               
            </tr>
        </thead>
        <tbody  >
            {% for type in types %}
                <tr>
                    <td>{{ type.id }}</td>
                  <td>{{ type.name }}</td>
                  
                  
                  
                            
                  <td><img src="{{ asset('/uploads/images/' ~ type.image) }}" alt="Image" width="100" /></td>
                  
                  
                    <td>{{ type.description }}</td>
             
                  
                   
                     
                    <td>
                        <a href="{{ path('admin_type_update', {id: type.id}) }}"  class="text-warning">Modifier</a>
                        <a href="{{ path('admin_type_delete', {id: type.id}) }}"  class="text-danger">Supprimer</a>
                    </td>
                    
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}