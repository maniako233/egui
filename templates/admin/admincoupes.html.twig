    {% extends 'base.html.twig' %}

{% block title %}Gestion des produits{% endblock %}
{% block body %}
<div class="container mt-5">
    <a href="{{ path('admin_coupe_new') }}" class="btn btn-primary">Ajouter</a>
    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Action</th>
             
               
            </tr>
        </thead>
        <tbody>
            {% for coupe in coupes %}
                <tr>
                    <td>{{ coupe.id }}</td>
                  <td>{{ coupe.name }}</td>
                
                     
                    <td>
                        <a href="{{ path('admin_coupe_update', {id: coupe.id}) }}"  class="text-warning">Modifier</a>
                        <a href="{{ path('admin_coupe_delete', {id: coupe.id}) }}"  class="text-danger">Supprimer</a>
                    </td>
                    
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}