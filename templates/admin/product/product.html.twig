{% extends 'base.html.twig' %}

{% block title %}Gestion des produits{% endblock %}
{% block body %}
<div class="container mt-5">
    <a href="{{ path('admin_product_new') }}" class="btn btn-primary">Ajouter</a>
    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <th>#</th>
                <th>Price</th>
                  <th>Image</th>
              
                <th>Quantity</th>
              
                <th>Coupe</th>
              
                <th>Type</th>
                <th>Action</th>
                
           
               
            </tr>
        </thead>
        <tbody>
