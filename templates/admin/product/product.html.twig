                    <td>{{ product.coupe.name }}</td>
                  
                    <td>{{ product.type.name }}</td>

    

                 
                  
                            
                   
                  
             
                  
                   
                     
                    <td>
                        <a href="{{ path('admin_product_update', {id: product.id}) }}"  class="text-warning">Modifier</a>
