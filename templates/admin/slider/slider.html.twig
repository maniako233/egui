{% extends 'base.html.twig' %}

{% block title %}Gestion des produits{% endblock %}
{% block body %}
<div class="container  mt-5">
    <a href="{{ path('new_slider') }}" class="btn btn-primary">Ajouter</a>
    <table class="table table-dark table-striped ">
        <thead>
            <tr>
                <th>#</th>
                 

          <th>Image</th>
               
                <th>Position</th>
            
                <th>Action</th>
            
            
            </tr>
        </thead>
        <tbody>
            {% for slider in sliders %}
                <tr>
                  

                       <td>{{ slider.id }}</td>
                     
                     

                     <td><img src="{{ asset('uploads/images/' ~ slider.image) }}" alt="Image" width="100" /></td>

                     <td>{{ slider.position }}</td>  

                     
                    <td>
                        <a href="{{ path('admin_slider_update', {id: slider.id}) }}"  class="text-warning">Modifier</a>
                        <a href="{{ path('admin_slider_delete', {id: slider.id}) }}"  class="text-danger">Supprimer</a>
                    </td>
                    
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}