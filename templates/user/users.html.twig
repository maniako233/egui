{% extends 'base.html.twig' %}

{% block title %}Gestion des membres{% endblock %}

{% block body %}
    <div class="container mt-5">
        <table class="table table-dark table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Fullname</th>
                    <th>Phone</th>
                    <th>Delivery Address</th>
                    <th>Billing Address</th>
                    <th>Email</th>
                 
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for user in users %}
                    <tr>
                        <td>{{ user.id }}</td>
                        <td>{{ user.fullname }}</td>
                        <td>{{ user.phone }}</td>
                        <td>{{ user.deliveryaddress }}</td>
                        <td>{{ user.billingaddress }}</td>
                        <td>{{ user.email }}</td>
                  
                        <td>
                            <a href="{{ path('user_edit', {'id': user.id}) }}" class="text-warning">Modifier</a>
                            <a href="{{ path('user_delete', {'id': user.id}) }}" class="text-danger">Supprimer</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}